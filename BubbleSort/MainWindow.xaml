<?xml version="1.0" encoding="utf-8" ?>
<WinUI:DesktopWindow
    x:Class="BubbleSort.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinUI="using:BubbleSort.WindowExtensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BubbleSort"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BubbleSort"
    Width="1300"
    Height="800"
    mc:Ignorable="d">

    <Grid
        Width="1300"
        Height="800"
        Background="{StaticResource AppCommonBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Width="1300"
            Height="190"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Width="100"
                    Height="100"
                    Margin="0,-80,0,0"
                    Source="/Assets/profile-circle.png" />
                <StackPanel
                    Grid.Column="1"
                    Margin="10,15,0,0"
                    Orientation="Vertical">
                    <TextBlock Text="Bubble Sort Algorithm implemented By Mohammad Haeri" />
                    <Line
                        Margin="0,5"
                        Stroke="Black"
                        X1="0"
                        X2="400"
                        Y1="0"
                        Y2="0" />
                    <TextBlock Text="https://github.com/Mohammad-Haeri" TextWrapping="Wrap" />
                    <Line
                        Margin="0,5"
                        Stroke="Black"
                        X1="0"
                        X2="400"
                        Y1="0"
                        Y2="0" />
                </StackPanel>
            </Grid>
            <StackPanel Grid.Column="1" Orientation="Vertical" />
            <StackPanel Grid.Column="2" Orientation="Vertical" />

        </Grid>
        <ScrollViewer
            Grid.Row="1"
            Width="800"
            Height="590"
            Margin="10" />

    </Grid>

</WinUI:DesktopWindow>
